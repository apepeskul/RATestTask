<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
<script type="text/javascript" charset="utf8"
        src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#companies").dataTable({

            "sAjaxSource": "/datatables",
            "bServerSide": true,
            "sPaginationType": "full_numbers",
            "bJQueryUI": true,
            "aoColumns": [
                { "mDataProp": "id" },
                { "mDataProp": "firstName" },
                { "mDataProp": "lastName" },
                { "mDataProp": "salary" },
                { "mDataProp": "birthDate" },
                { "mDataProp": "active" },
                { "mDataProp": "division" },

            ]
        });
    });
</script>
<html>
<head><title>Rantz</title></head>
<body>
<h2>Rantz:</h2>
    #foreach($division in $divisions)
        $division.id
    #end
<br/>

<form method="POST" action="/addEmp">

    #foreach( $error in $status.errorMessages )
        <p>$error</p>
    #end

#*<b>#springMessage("firstName")</b>*#
    #springFormInput("emp.firstName" "")<br/>
    #springShowErrors("<br>" "")

#*<b>#springMessage("lastName") </b>*#
    #springFormInput("emp.lastName" "")<br/>
    #springShowErrors("<br>" "")
#*#springMessage("birthDate")*#
    #springFormInput("emp.birthDate""")<br/>
    #springShowErrors("<br>" "")

    #springFormSingleSelect( "emp.division" $divisions "")<br/>

    <input type="submit" class="btn btn-success"/>
#*   $status.errorMessages
   #if($status.errors.hasErrors())
   ## Global error messages
       #foreach($e in $status.errorMessages)
           <p>${e}</p>
       #end
   ## Field error messages
       #foreach($f in $status.errors.fieldErrors)
           #springBind("emp.${f.field}")*#
    #foreach($e in $status.errorMessages)
        <p>${e}</p>
    #end
#* #end
#end*#
</form>

<div id="container">
    <div id="demo_jui">
        <table id="companies" class="display">
            <thead>
            <tr>
                <th>id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Salary</th>
                <th>Birth Date</th>
                <th>Active</th>
                <th>Division</th>

            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
</body>


</html>