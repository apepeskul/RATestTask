<html>
<head>

    <title>HR app
    </title>

</head>
<body>
<div class="container">
    <div class="row">
        <div class="span10 offset1">
            <div class="row" style="border-bottom: inactiveborder">
                <div class="span7">
                    <h2 align="center">New employee:</h2>


                #* #foreach($active in $actives)
                     $active
                 #end*#
                    <br/>

                    <form id="userForm" class="form-horizontal" method="POST" action="/addEmp">


                    #*<b>#springMessage("firstName")</b>*#

                        <div class="control-group">
                            <label for="firstName" class="control-label">First Name:</label>

                            <div class="controls">
                                #springFormInput("emp.firstName" 'id="firstName"')<br/>
                                #springShowErrors("<br>" "")
                            </div>
                        </div>


                    #*<b>#springMessage("lastName") </b>*#
                        <div class="control-group">
                            <label for="lastName" class="control-label">Last Name:</label>

                            <div class="controls">
                                #springFormInput("emp.lastName" 'id="lastName"')<br/>
                                #springShowErrors("<br>" "")
                            </div>
                        </div>
                    #*#springMessage("birthDate")*#
                        <div class="control-group">
                            <label for="birthdate" class="control-label">Birth date:</label>

                            <div class="controls">
                                #springFormInput("emp.birthDate" 'id="birthdate"')<br/>
                                #springShowErrors("<br>" "")
                            </div>
                        </div>

                        <div class="control-group">
                            <label for="salary" class="control-label">Salary:</label>

                            <div class="controls">
                                #springFormInput("emp.salary" 'id="salary"')<br/>
                                #springShowErrors("<br>" "")
                            </div>
                        </div>

                        <div class="control-group">
                            <label for="active" class="control-label">Is active?:</label>

                            <div class="controls">
                                #springFormRadioButtons("emp.active" $actives  "<br>"'id=actives') <br/>
                            #*#springFormSingleSelect( "emp.division" $divisions 'id="divisions')<br/>*#
                            </div>
                        </div>

                        <div class="control-group">
                            <label for="divisions" class="control-label">Division:</label>

                            <div class="controls">
                                #springFormSingleSelect( "emp.division" $divisions 'id="divisions')<br/>
                            </div>
                        </div>
                        <div class="row" style="border-top: InactiveBorder; border-bottom: inactiveborder">
                            <div class="pagination-centered">
                                <div class="control-group">
                                    <div class="controls">
                                        <input type="submit" id="submitButton" class="btn btn-success"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                    #*   $status.errorMessages
                       #if($status.errors.hasErrors())
                       ## Global error messages
                           #foreach($e in $status.errorMessages)
                               <p>${e}</p>
                           #end
                       ## Field error messages
                           #foreach($f in $status.errors.fieldErrors)
                               #springBind("emp.${f.field}")*#

                    #* #end
                    #end*#
                    </form>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="span8 offset2">

            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover"
                   id="emptable">
                <thead>
                <tr>
                    <th>id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Salary</th>
                    <th>Birth Date</th>
                    <th>Active</th>
                    <th>Division</th>

                </tr>
                </thead>
                <tbody>
                </tbody>
                <tfoot>
                <tr>
                    <th>id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Salary</th>
                    <th>Birth Date</th>
                    <th>Active</th>
                    <th>Division</th>

                </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

</body>


</html>